<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/theme_splash_image"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:adSize="LARGE_BANNER"
        app:adUnitId="@string/admobbanner">

    </com.google.android.gms.ads.AdView>

    <ImageView
        android:id="@+id/imageintro"
        android:layout_width="match_parent"
        android:layout_height="631dp"
        android:layout_below="@+id/adView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/theme_splash_image"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/share"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/apply"
        android:layout_alignStart="@+id/apply"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:background="#FFF385"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="친구에게 알리기"
        android:textColor="#434343"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/apply"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="#FF80AB"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/apply"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/btn_mainactivity"
        android:text="@string/install_kakaotalk"
        android:textColor="#2E2E2E"
        android:textStyle="bold"
        android:textSize="17sp"
        android:visibility="gone"/>

</RelativeLayout>
